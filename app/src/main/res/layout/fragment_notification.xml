<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_margin="50dp"
            android:text="Notification"
            android:textColor="@color/black"
            android:textSize="50sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/selectable_items"
            android:layout_width="309dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/noti2"

            >

            <ImageButton
                android:id="@+id/completeButton1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"

                android:backgroundTint="@android:color/transparent"
                android:contentDescription="checkbox"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/uncheck_box" />

            <TextView
                android:id="@+id/name1"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="notification1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/selectable_items"
            android:layout_width="309dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/noti2"

            >

            <ImageButton
                android:id="@+id/completeButton2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"

                android:backgroundTint="@android:color/transparent"
                android:contentDescription="checkbox"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/uncheck_box" />

            <TextView
                android:id="@+id/name2"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="notification1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/selectable_items"
            android:layout_width="309dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/noti2"

            >

            <ImageButton
                android:id="@+id/completeButton3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"

                android:backgroundTint="@android:color/transparent"
                android:contentDescription="checkbox"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/uncheck_box" />

            <TextView
                android:id="@+id/name3"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="notification1" />

        </LinearLayout>



    </LinearLayout>



</RelativeLayout>

